<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lenne0815.karooheadphones">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".KarooHeadphonesApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.KarooDynamicHeadphones">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.KarooDynamicHeadphones">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.DynamicHeadphonesService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback">
        </service>

        <service
            android:name=".extension.DynamicHeadphonesExtension"
            android:enabled="true"
            android:exported="true"
            android:permission="io.hammerhead.karoo.extension.permission.BIND_EXTENSION">
            <intent-filter>
                <action android:name="io.hammerhead.karoo.extension.action.BIND" />
            </intent-filter>
        </service>

    </application>

</manifest>